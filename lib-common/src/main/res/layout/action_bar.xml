<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_actionbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_actionbar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="12dp"
        android:paddingRight="6dp" />

    <LinearLayout
        android:id="@+id/ll_actionbar_centre"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/ll_actionbar_left"
        app:layout_constraintRight_toRightOf="@id/ll_actionbar_right"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/ll_actionbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="12dp"
        tools:ignore="RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>
